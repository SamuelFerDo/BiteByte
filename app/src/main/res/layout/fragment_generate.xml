<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:background="@color/color_theme_secondary"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.question.generate.GenerateFragment">

    <TextView
        android:id="@+id/tv_generating_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:textAlignment="center"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="72dp"
        android:textColor="@color/black"
        android:text="@string/generating_menu"
        android:textSize="50sp"
        android:textStyle="bold"
        android:textAppearance="@style/TextAppearance.Material3.HeadlineLarge" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_percentage"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="22dp"
        app:cardBackgroundColor="@color/color_theme_primary"
        app:cardCornerRadius="90dp"
        app:cardElevation="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/iv_illustration"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_generating_menu">

        <TextView
            android:id="@+id/tv_percentage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Percentage"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal|center_vertical"
            android:textColor="@color/white"/>

    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/iv_illustration"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="22dp"
        android:src="@drawable/generate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cv_percentage" />

    <TextView
        android:id="@+id/tv_generate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/iv_illustration"
        android:layout_marginStart="24dp"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="22dp"
        android:textAlignment="center"
        android:text="@string/generate_meal"
        android:textAppearance="@style/TextAppearance.Material3.LabelLarge" />

</androidx.constraintlayout.widget.ConstraintLayout>