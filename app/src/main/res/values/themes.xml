<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.BiteByte" parent="Theme.Material3.Light.NoActionBar">

        <item name="colorPrimary">@color/color_theme_primary</item>
        <item name="colorPrimaryVariant">@color/color_theme_primary</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/color_theme_primary</item>
        <item name="colorSecondaryVariant">@color/color_theme_primary</item>
        <item name="colorOnSecondary">@color/black</item>

    </style>

    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/color_theme_primary</item>
    </style>

    <style name="Theme.BiteByte" parent="Base.Theme.BiteByte" />

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="BottomSheetDialogTheme" parent="Theme.Material3.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>
</resources>